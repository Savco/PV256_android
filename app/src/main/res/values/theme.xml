<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- inherit from the material theme -->
    <style name="AppCustomTheme" parent="AppBaseTheme">
        <item name="colorPrimary">@color/colorSecondPrimary</item>
        <item name="colorPrimaryDark">@color/colorSecondDark</item>
        <item name="colorAccent">@color/colorSecondAccent</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">30sp</item>
    </style>



</resources>